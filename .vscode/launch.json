{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "hexa-http-api",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/http/main.go",
            "args": [
                "--configPath",
                "${workspaceFolder}/deployment/config/config.yaml"
            ],
            "env": {
                "DOMAIN_URL": "http://localhost:9002"
            }
        },
        {
            "name": "hexa-grpc-api",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/grpc/main.go",
            "args": [
                "--configPath",
                "${workspaceFolder}/deployment/config/config.yaml"
            ],
            "env": {
                "DOMAIN_URL": "http://localhost:9002"
            }
        },
    ]
}